{
  "name": "asuka",
  "version": "0.0.8",
  "description": "No Apollo",
  "repository": "git@github.com:LeetCode-OpenSource/asuka.git",
  "author": "LongYinan <lynweklm@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "shx rm -rf ./packages/{di,http,types,utils}/**/{esm,lib} && shx rm -rf ./packages/**/tsconfig.tsbuildinfo && tsc -b tsconfig.project.json && rollup --config rollup.config.js",
    "circular": "madge --circular ./packages/{http,utils,types}/src/index.ts",
    "cover": "shx rm -rf .nyc_output && shx rm -rf coverage && nyc --reporter=html --reporter=lcov ava",
    "dev": "node tools/cli/webpack-cli.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "server": "nodemon packages/test-server",
    "test": "ava",
    "typecheck": "lerna run typecheck"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.2",
    "@types/react-dom": "^16.8.4",
    "@types/webpack": "^4.4.34",
    "ava": "^2.1.0",
    "coveralls": "^3.0.4",
    "css-loader": "^3.0.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.0.1",
    "madge": "^3.4.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reflect-metadata": "^0.1.13",
    "rollup": "^1.16.4",
    "shx": "^0.3.2",
    "source-map-loader": "^0.2.4",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "graphql": "^14.4.1",
    "rxjs": "^6.5.2",
    "tslib": "^1.10.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.@(ts|tsx)": [
      "prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "packages/**/__tests__/*.spec.ts"
    ],
    "sources": [
      "packages/**/*.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "packages/**/*.ts"
    ],
    "exclude": [
      "packages/**/*.spec.ts"
    ]
  }
}
